---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ethical Hacker Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-hacker-bg text-hacker-gray min-h-screen">
    <nav class="p-6 border-b border-hacker-green/20">
      <div class="max-w-4xl mx-auto flex justify-between items-center">
        <a href="/" class="text-hacker-green font-mono text-xl">~/home</a>
        <div class="flex gap-6">
          <a href="/notes" class="hover:text-hacker-green transition-colors">Notes</a>
          <a href="/contact" class="hover:text-hacker-green transition-colors">Contact</a>
        </div>
      </div>
    </nav>
    <main class="max-w-4xl mx-auto p-6">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;600&display=swap');
  
  html {
    font-family: 'Fira Code', monospace;
  }
  
  h1, h2, h3, h4, h5, h6 {
    color: #00ff55;
  }
</style>
